{
  "packages": ["packages/*"],
  "version": "independent",
  "npmClient": "yarn",
  "changelog": {
    "repo": "router5/router5",
    "labels": {
      "bug": "Bug fix",
      "feature": "Feature",
      "housekeeping": "House keeping",
      "enhancement": "Enhancement"
    },
    "cacheDir": ".changelog"
  },
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "yarn.lock", "*.log"]
    }
  }
}
